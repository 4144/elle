
# usage: cd build/<platform> && . ../../documentation/tmp/HOWTO

rm -rf ~/.config/infinit
mkdir -p ~/.config/infinit/
cp oracle/infinit.auth ~/.config/infinit

echo 'hit enter whenever you want !'

echo 'creating passport'
./satellites/passport/8passport -c &> 8passport.log

echo 'creating user'
./satellites/user/8user -c -n fistouille &> 8user.log
cd ~/.config/infinit
cp users/fistouille/fistouille.idy infinit.idy
cp users/fistouille/fistouille.dic infinit.dic
cd - > /dev/null

./satellites/network/8network -c -n local -m local -a fistouille &> 8network.log
./satellites/network/8network -c -n demo -m slug -a fistouille &> 8network.log
./satellites/network/8network -c -n slug -m slug -a fistouille &> 8network.log
./satellites/network/8network -c -n remote -m remote -a fistouille &> 8network.log

cp ~/infinit.conf ~/.config/infinit/infinit.conf
