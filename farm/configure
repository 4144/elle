#!/bin/sh

set -ex

mkdir -p "$DIR_BUILD"
DIR_BUILD=$(realpath "$DIR_BUILD")
DIR_SOURCE=$(realpath "$DIR_SOURCE")

mkdir -p "$DIR_BUILD"
cd "$DIR_BUILD"
CXX="$(which g++-4.7.1)"
cmake "-GUnix Makefiles"                    \
	-DCMAKE_CXX_COMPILER="$CXX"             \
	-DINFINIT_PLATFORM=linux64              \
	.                                       \
	"$DIR_SOURCE"
