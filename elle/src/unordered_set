// -*- c++ -*-
#ifndef ELLE_UNORDERED_SET
# define ELLE_UNORDERED_SET

# include <ostream>
# include_next <unordered_set>

namespace elle
{
  template <typename F, typename... T>
  void
  fprintf(std::ostream& out,
          F&& fmt,
          T&&... values);
}

namespace std
{
  template <class V, class ... OTHER>
  ostream&
  operator <<(ostream& out, unordered_set<V, OTHER...> const& v)
  {
    elle::fprintf(out, "{");
    bool first = true;
    bool fixed = out.flags() & std::ios::fixed;
    for (V const& elt: v)
    {
      if (first)
      {
        first = false;
        elle::fprintf(out, fixed ? "%f" : "%s", elt);
      }
      else
        elle::fprintf(out, fixed ? ", %f" : ", %s", elt);
    }
    elle::fprintf(out, "}");
    return out;
  }

  template <typename T, typename ... Types>
  bool
  contains(std::unordered_set<Types ...> const& set, T const& e)
  {
    return set.find(e) != set.end();
  }
}

#endif
