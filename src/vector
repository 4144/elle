#pragma once

#include <ostream>
#include_next <vector>

#include <elle/printf-fwd.hh>

namespace std
{
  template <typename... Args>
  ostream&
  operator <<(ostream& out, vector<Args...> const& v)
  {
    elle::fprintf(out, "[");
    bool first = true;
    for (auto const& elt: v)
    {
      if (first)
      {
        first = false;
        elle::fprintf(out, is_fixed(out) ? "%f" : "%s", elt);
      }
      else
        elle::fprintf(out, is_fixed(out) ? ", %f" : ", %s", elt);
    }
    elle::fprintf(out, "]");
    return out;
  }
}

// Local Variables:
// mode: c++
// End:
